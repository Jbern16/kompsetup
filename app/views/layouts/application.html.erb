<!DOCTYPE html>
<html>
  <head>
    <title><%= strip_tags(@page_title) || "" %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_pack_tag 'application' %>
    <%= javascript_pack_tag 'application' %>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">

    <% if Rails.env.development? %>
      <link rel="stylesheet" href="https://i.icomoon.io/public/63c413a393/native/style.css">
      <link rel="stylesheet" href="https://i.icomoon.io/public/63c413a393/native/style-svg.css">
      <script defer src="https://i.icomoon.io/public/63c413a393/native/svgxuse.js"></script>
    <% else %>
      <link rel="stylesheet" href="https://s3.amazonaws.com/icomoon.io/124927/native/style.css?gmjayb">
      <link rel="stylesheet" href="https://s3.amazonaws.com/icomoon.io/124927/native/style-svg.css?36kuqi">
      <script defer src="https://s3.amazonaws.com/icomoon.io/124927/native/svgxuse-s3.js?36kuqi"></script>
    <% end %>

  </head>

  <body class='company-name-here <%= controller_name %>-<%= action_name %>'>
    <%= yield %>
  </body>
</html>
