<div class="ct-component ct-compare <%= @content['classes'] %>">

  <div class="inner-ct-component">

    <%- if @content['title'] %>
      <h2 class="ct-component-title"><%= @content['title'].html_safe  %></h2>
    <% end -%>

    <div class="ct-compare-table">
      <div class="ct-compare-table-head">
        <div class="ct-compare-table-row">
          <div class="head-feature-title">
            <%= @content['category_title'] %>
          </div>
          <div class="head-name">
            <%= @content['brand'] %>
          </div>
          <div class="head-name muted">
            <%= @content['other_title'] %>
          </div>
        </div>
      </div>

      <% @content['features'].each do |feature| %>
        <div class="ct-compare-table-row">
          <div class="feature-title">
            <%= feature['feature_title'].html_safe %>
          </div>
          <div class="feature-icon-wrap brand" data-title="<%= @content['brand'] %>">
            <% if @content['brand_image'] %>
              <%= image_tag @content['brand_image'], class: "feature-icon" %>
            <% end %>
          </div>
          <div class="feature-icon-wrap muted" data-title="<%= @content['other_title'] %>">
            <% if @content['other_image'] %>
              <%= image_tag @content['other_image'], class: "feature-icon" %>
            <% end %>
          </div>
        </div>
      <% end %>

    </div>

  </div>

</div>
