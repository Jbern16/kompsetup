<div class="ct-component ct-hero <%= @content['classes'] %>">

  <%- if @content['img_name'] %>
    <div class="img">
      <%= image_tag @content['img_name'] %>
    </div>
  <% end -%>

  <%- if @content['mobile_img_name'] %>
    <div class="mobile-img">
      <%= image_tag @content['mobile_img_name'] %>
    </div>
  <% end -%>

  <div class="inner-hero">
    <div class="text-box">

      <%- if @content['title'] %>
        <h1 class="title"><%= @content['title'].html_safe %></h1>
      <% end -%>

      <%- if @content['text'] %>
        <p class="text"><%= @content['text'].html_safe %></p>
      <% end -%>

      <%- if @content['btn_text'] %>
        <%= link_to @content['btn_text'], @content['cta_link'] || @cta_link, class: 'hero-cta-btn track-cta' %>
      <% end -%>

    </div>
  </div>
</div>
