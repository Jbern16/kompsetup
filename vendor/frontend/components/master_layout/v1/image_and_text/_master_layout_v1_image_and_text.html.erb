<div class="ct-component ct-image-and-text <%= @content['classes'] %>">
  <div class="inner-ct-component">

    <%- if @content['image'] %>
      <div class="image-container">
        <%= image_tag @content['image'] %>
      </div>
    <% end -%>

    <div class="text-container">
      <div class="inner-text-container">

        <%- if @content['title'] %>
          <h3 class="title"><%= @content['title'].html_safe %></h3>
        <% end -%>

        <%- if @content['text'] %>
          <p class="text"><%= @content['text'].html_safe %></p>
        <% end -%>

      </div>
    </div>

  </div>
</div>
