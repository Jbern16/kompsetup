<div class="ct-component ct-pressband <%= @content['classes'] %>">
  <div class="inner-ct-component">
    <% if @content['title'] %>
      <h2 class="ct-component-title"><%= @content['title'].html_safe %></h2>
    <% end %>

    <div class="outlets">
      <% @content['outlets'].each do |outlet| %>
        <div class="outlet">
          <%= image_tag outlet['img'] %>
        </div>
      <% end %>
    </div>
  </div>
</div>
