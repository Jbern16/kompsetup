<div class="ct-component ct-text-hero <%= @content['classes'] %>">

  <% if @content['image'].present? || @content['image_mobile'].present? %>
    <div class="image-container">

      <% if @content['image'].present? %>
        <%= image_tag @content['image'], class: "dt-img" %>
      <% end %>

      <% if @content['image_mobile'].present? %>
        <%= image_tag @content['image_mobile'], class: "mobile-img" %>
      <% end %>

    </div>
  <% end %>

  <div class="text-container">
    <% if @content['title'].present? %>
      <h3 class="title"><%= @content['title'].html_safe %></h3>
    <% end %>

    <% if @content['text'].present? %>
      <p class="text"><%= @content['text'].html_safe %></p>
    <% end %>

    <% if @content['btn_text'].present? %>
      <%= link_to @content['btn_text'], @content['btn_link'] || @cta_link, class: 'text-hero-cta-btn track-cta' %>
    <% end %>
  </div>
</div >
